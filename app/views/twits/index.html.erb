<p id="notice"><%= notice %></p>
<h1 style="padding-top:1px;">Welcome to Tweeter</h1>

<%= link_to "New Twit", new_twit_path, class: "btn btn-xs btn-success" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
	Message
      </th>
      <th>
	User
      </th>
      <th colspan="3">
      </th>
    </tr>
  </thead>

  <tbody>
    <% @twits.each do |twit| %>
      <tr>
	<td>
	  <%= twit.message %>
	</td>
	<td>
	  <%= twit.user.username %>
	</td>
	<td>
	  <%= link_to "show", twit, class: "btn btn-sm btn-default" %>
	</td>
	<td>
	  <%= link_to "Edit", edit_twit_path(twit), class: "btn btn-sm btn-default" %>
	</td>
	<td>
	  <%= link_to "Destroy", twit, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
	</td>
      </tr>
      </tr>
    <% end %> 
  </tbody>

</table>
